<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/limingjobu"
    tools:context=".FreePouringCoffeeArt">

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:gravity="top|left|center"
        android:orientation="horizontal">

    </LinearLayout>

    <ScrollView
        android:id="@+id/vertical_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="40dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/inside_vscroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/headerView"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/freepouring_desc"
                    android:layout_width="match_parent"
                    android:layout_height="375dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/freepouring_desc" />

                <ImageView
                    android:id="@+id/coffeedescrect"
                    android:layout_width="match_parent"
                    android:layout_height="565dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/freepouring_desc"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="-55dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/cdescrectangles" />

                <ImageView
                    android:id="@+id/descline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/freepouring_title"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/description_line" />

                <TextView
                    android:id="@+id/freepouring_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/coffeedescrect"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/coresansgbold"
                    android:text="Free Pouring"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/freepouring_descript"
                    android:layout_width="match_parent"
                    android:layout_height="505dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/descline"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/coresansgmedium"
                    android:lineSpacingExtra="4dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="25dp"
                    android:text="Free pouring is a common coffee art method that consists of steamed milk poured directly from the milk pitcher and into the cup. The most common patterns in free pouring are tulip and other flowers such as rose, lavender, etc. Most professionals called art pitchers tend to join available coffee art competitions to train their free pouring skills.

Usually there are 4 aspects that are required to create a astonishing free pour.

1. Milk Texture
Micro foamed milk with at lest 1-2 cm when in cup.

2. Color Infusion
Only 2 colors which are white and brown.

3. Balance
Symmetric pour around 70% of the total available space of the cup.

4. Creativity
Free pour isn't an easy technique and it depends how complex you pour and create your own pattern.

"
                    android:textColor="@color/colorAccent" />

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/coffeedescrect"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="-15dp"
                    app:srcCompat="@drawable/fav_btn" />

            </RelativeLayout>
        </LinearLayout>


    </ScrollView>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/coresansbold"
        android:text="Coffee Art"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>