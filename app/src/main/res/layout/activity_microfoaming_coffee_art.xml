<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/limingjobu"
    tools:context=".MicrofoamingCoffeeArt">

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:gravity="top|left|center"
        android:orientation="horizontal">

    </LinearLayout>

    <ScrollView
        android:id="@+id/vertical_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="40dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/inside_vscroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/headerView"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/chocolateart_desc"
                    android:layout_width="match_parent"
                    android:layout_height="375dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/microfoaming_desc" />

                <ImageView
                    android:id="@+id/coffeedescrect"
                    android:layout_width="match_parent"
                    android:layout_height="664dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/chocolateart_desc"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="-101dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/cdescrectangles" />

                <ImageView
                    android:id="@+id/descline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/microfoaming_title"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/description_line" />

                <TextView
                    android:id="@+id/microfoaming_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/coffeedescrect"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/coresansgbold"
                    android:text="Microfoaming"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/microfoaming_descript"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/descline"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/coresansgmedium"
                    android:lineSpacingExtra="4dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="25dp"
                    android:text="Microfoaming is a fragment of free pouring and etching coffee art methods but is essential to making coffee art patterns. Microfoaming usually have separate layers of dry foam and liquid milk where it is foamed using a steam wand on an espresso machine.\n\nMicrofoaming requires the introduction of steam to the milk until a certain amount of foam (froth) is created. The foam content is controlled by coffee baristas during the steaming process, so it could decompose into a layer of foam over a layer of liquid milk into the coffee. This method has 3 stages to do:
                    \n\n1. Frothing\n
Having the steam tip near the top of the milk and usually create an audible hissing sound.\n\n
2. Mixing\n
Creating a whirlpool in the milk before the steaming process.\n\n
3. Steaming\n
The foam is created at the top and separates the liquid before being added to the coffee.
"
                    android:textColor="@color/colorAccent" />

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/coffeedescrect"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="-15dp"
                    app:srcCompat="@drawable/fav_btn" />

            </RelativeLayout>
        </LinearLayout>


    </ScrollView>

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/coresansbold"
        android:text="Coffee Art"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>