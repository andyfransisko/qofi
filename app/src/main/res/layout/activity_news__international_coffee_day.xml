<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".News_InternationalCoffeeDay">

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:gravity="top|right|center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/vertical_scroll"
        android:layout_width="match_parent"
        android:layout_height="475dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/headerView"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/inside_vscroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerView">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/headerView"
                android:layout_marginTop="-5dp">


                <ImageView
                    android:id="@+id/news_bg"
                    android:layout_width="match_parent"
                    android:layout_height="797dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/baristakeren" />

                <TextView
                    android:id="@+id/news_head"
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:layout_alignBottom="@+id/news_bg"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginBottom="166dp"
                    android:fontFamily="@font/coresanscube"
                    android:paddingLeft="30dp"
                    android:text="International\n\nCoffee Day"
                    android:textColor="@color/limingjobu"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/news_subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/news_head"
                    android:layout_toEndOf="@+id/news_bg"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="-165dp"
                    android:fontFamily="@font/coresansgmedium"
                    android:text="Baristas Coffee Culture"
                    android:textColor="@color/limingjobu"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/news_head"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-140dp"
                    android:layout_marginEnd="0dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    app:srcCompat="@drawable/news_line" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="21dp"
                    android:layout_height="27dp"
                    android:layout_below="@+id/imageView6"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="19dp"
                    app:srcCompat="@drawable/map_location" />

                <TextView
                    android:id="@+id/news_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView6"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="25dp"
                    android:layout_toEndOf="@+id/imageView7"
                    android:fontFamily="@font/coresansgmedium"
                    android:text="Toby Estate Coffee Roasters, Australia"
                    android:textColor="@color/limingjobu"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/news_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/news_location"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="36dp"
                    android:layout_toEndOf="@+id/imageView8"
                    android:fontFamily="@font/coresansgmedium"
                    android:text="1 October"
                    android:textColor="@color/limingjobu"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/imageView7"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="24dp"
                    app:srcCompat="@drawable/map_time" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/news_bg"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/coresansgmedium"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="Coffee Day also marks the long history of the drink:\nthe properties of coffee beans are thought to have first\nbeen discovered in Ethiopia on 1st October. The beans are actually the  pits found in the coffee berry or cherry.\n\nThe story goes that a 9th century goat herder  noticed their stimulating effects on his goats and began\nexperimenting."
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    app:lineHeight="30dp" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_below="@+id/textView7"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    app:srcCompat="@drawable/international_news2" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView10"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/coresansgmedium"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="So, one of the best coffee shops in Australia whereas\nthe main branch is located on Chippendale, New South\nWales, Sydney named Toby's Estate Coffee Roasters by\nToby Smith. \n\nOver 15 years ago, Toby traded in a lucrative career as a lawyer to follow his heart and venture to some of the worldâ€™s most remote regions to discover all there was to know about his first love - coffee.\n\nTo celebrate international coffee day, what they continue from Toby's masterpiece is to create beautiful coffee arts.\n\nFrom Australia to USA, these baristas and coffee artisans have created various techniques of coffee art for people around the world."
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    app:lineHeight="30dp" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_below="@+id/textView8"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="60dp"
                    app:srcCompat="@drawable/international_news3" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/coresansbold"
        android:text="News"
        android:textColor="#ffffff"
        android:textSize="18sp" />


</RelativeLayout>