<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/limingjobu"
    tools:context=".Introduction">

    <android.support.v4.view.ViewPager
        android:id="@+id/slideViewPager"
        android:layout_width="match_parent"
        android:layout_height="420dp">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/dotsLayout"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_below="@+id/slideViewPager"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="0dp"
        android:textAlignment="center"></LinearLayout>

    <ImageView
        android:id="@+id/btnok"
        android:layout_width="205dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="40dp"
        app:srcCompat="@drawable/gotitbro" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:fontFamily="@font/coresansgbold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="BACK"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:fontFamily="@font/coresansgbold"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="NEXT"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />


</RelativeLayout>