<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/limingjobu"
    tools:context=".EtchingCoffeeArt">

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:gravity="top|left|center"
        android:orientation="horizontal">

    </LinearLayout>

    <ScrollView
        android:id="@+id/vertical_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="40dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/inside_vscroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/headerView"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/etching_desc"
                    android:layout_width="match_parent"
                    android:layout_height="375dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/etching_desc" />

                <ImageView
                    android:id="@+id/coffeedescrect"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/etching_desc"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="-50dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/cdescrectangles" />

                <ImageView
                    android:id="@+id/descline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/etching_title"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/description_line" />

                <TextView
                    android:id="@+id/etching_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/coffeedescrect"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/coresansgbold"
                    android:text="Etching"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/etching_descript"
                    android:layout_width="match_parent"
                    android:layout_height="380dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/descline"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/coresansgmedium"
                    android:lineSpacingExtra="4dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="25dp"
                    android:text="Etching is an alternative coffee art method that could create simple geometric shapes to complicated drawings.\n\nThe term is taken from Daniel Hopfer who apply the technique of printmaking for manufacturers, and other tools that could create a better result.
Etching art has a shorter lifespan than free pouring art method.\n\nAnother advantage to create is easy to get, prepare, and dispose where it requires a blade to create a good surface on the coffee art. There are various etching patterns such as portraits, 3D, swirls, etc.\n\nThrough etching, coffee baristas and artisans tend to have some time for a nice garnish and more creativity involved rather than free pouring.
"
                    android:textColor="@color/colorAccent" />

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/coffeedescrect"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="-15dp"
                    app:srcCompat="@drawable/fav_btn" />

            </RelativeLayout>
        </LinearLayout>


    </ScrollView>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/coresansbold"
        android:text="Coffee Art"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>