<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileCredentials">

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:gravity="top|left|center"
        android:orientation="horizontal">

    </LinearLayout>

    <ScrollView
        android:id="@+id/vertical_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-50dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/inside_vscroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/headerView"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <EditText
                    android:id="@+id/fname2"
                    android:layout_width="153dp"
                    android:layout_height="75dp"
                    android:layout_alignStart="@+id/email2"
                    android:layout_alignTop="@+id/lname2"
                    android:layout_marginStart="7dp"
                    android:layout_marginBottom="374dp"
                    android:background="@drawable/edittextbest"
                    android:fontFamily="@font/coresansgmedium"
                    android:hint="First Name"
                    android:inputType="textWebEditText"
                    android:padding="15dp"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/account" />

                <EditText
                    android:id="@+id/lname2"
                    android:layout_width="153dp"
                    android:layout_height="75dp"
                    android:layout_alignEnd="@+id/email2"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="374dp"
                    android:background="@drawable/edittextbest"
                    android:fontFamily="@font/coresansgmedium"
                    android:hint="Last Name"
                    android:inputType="textWebEditText"
                    android:padding="15dp"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/account" />

                <EditText
                    android:id="@+id/email2"
                    android:layout_width="320dp"
                    android:layout_height="75dp"
                    android:layout_alignStart="@+id/password2"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginBottom="299dp"
                    android:background="@drawable/edittextbest"
                    android:fontFamily="@font/coresansgmedium"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress"
                    android:padding="25dp"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/account" />

                <EditText
                    android:id="@+id/username2"
                    android:layout_width="320dp"
                    android:layout_height="75dp"
                    android:layout_above="@+id/password2"
                    android:layout_alignStart="@+id/email2"
                    android:layout_marginStart="0dp"
                    android:background="@drawable/edittextbest"
                    android:fontFamily="@font/coresansgmedium"
                    android:hint="Username"
                    android:inputType="textEmailAddress"
                    android:padding="25dp"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/account" />

                <EditText
                    android:id="@+id/password2"
                    android:layout_width="320dp"
                    android:layout_height="75dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="149dp"
                    android:background="@drawable/edittextbest"
                    android:fontFamily="@font/coresansgmedium"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="25dp"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/account" />

                <Button
                    android:id="@+id/changeprof"
                    android:layout_width="293dp"
                    android:layout_height="55dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="72dp"
                    android:background="@drawable/qofiaccbtn"
                    android:fontFamily="@font/coresansgbold"
                    android:text="SAVE CHANGES"
                    android:textColor="@color/default_fill_color"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="120dp"
                    android:src="@drawable/thinking" />

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/coresansbold"
        android:text="Edit Profile"
        android:textColor="#ffffff"
        android:textSize="18sp" />


</RelativeLayout>